{
  "openapi": "3.0.3",
  "info": {
    "title": "HR Platform"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "tags": [
    { "name": "employee", "description": ""}
  ],
  "paths": {
    "/hr_employee": {
      "put": {
        "tags": ["employee"],
        "summary": "Create an employee",
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Employee"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "item": {
                      "type":"object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/hr_employee/list": {
      "post": {
        "tags": ["employee"],
        "summary": "List employees",
        "responses": {
          "200": {
            "description": "Successfully fetched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "properties": {
                    "item": {
                      "type":"object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/hr_employee/{id}": {
      "delete": {
        "tags": ["employee"],
        "summary": "Delete an employee",
        "parameters": [{
          "in": "path",
          "name": "id",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Successfully deleted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "item": {
                      "type":"object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/billing/list": {
      "post": {
        "tags": ["billing"],
        "summary": "List bills",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FilterOrder"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully fetched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "properties": {
                    "item": {
                      "type":"object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "description": "id of the bill"
                        },
                        "consultant_email": { "type": "string"},
                        "company_name": { "type": "string"},
                        "project_name": { "type": "string"},
                        "amount": { "type": "integer"}
                        
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/skillset/list": {
      "post": {
        "tags": ["skillset"],
        "summary": "List skills",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FilterOrder"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully fetched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "properties": {
                    "item": {
                      "type":"object",
                      "properties": {
                        "consultant_id": {
                          "type": "integer",
                          "description": "id of the consultant"
                        },
                        "skill_name": { "type": "string"},
                        "years_of_experience": { "type": "integer"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Employee": {
        "required": ["name", "surname", "email_address"],
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "surname": { "type": "string" },
          "email_address": { "type": "string" },
          "phone_number": { "type": "string" }
        }
      },
      "FilterOrder": {
        "type": "object",
        "properties": {
          "filtering": {
            "type": "object",
            "properties": {
              "inclusive": {"type": "boolean", "required": ["inclusive"]},
              "columns": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {"type": "string"},
                    "operator": {"type": "string", "description": "one of 'ilike' | '>' | '<' | '=' | '!'"},
                    "value": {"type": "string"}
                  }
                }
              },
              "order": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "columnName": {"type": "string"},
                    "desc": {"type": "boolean"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "requestBodies": {
      "Pet": {
        "description": "Pet object that needs to be added to the store",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Pet"
            }
          },
          "application/xml": {
            "schema": {
              "$ref": "#/components/schemas/Pet"
            }
          }
        }
      },
      "UserArray": {
        "description": "List of user object",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        }
      }
    }
  }
}